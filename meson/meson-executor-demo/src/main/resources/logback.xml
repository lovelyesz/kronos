<?xml version="1.0" encoding="ISO-8859-1"?>
<configuration>
    <appender name="DEFAULT-APPENDER" class="ch.qos.logback.core.FileAppender">
        <file>/data/application/logs/meson/common-default.log</file>
        <encoder charset="UTF-8">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <!--<appender class="ch.qos.logback.core.ConsoleAppender">-->
        <!--<encoder charset="UTF-8">-->
            <!--<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>-->
        <!--</encoder>-->
    <!--</appender>-->
    <!-- ===================================================================== -->
    <!-- Loggers                                                               -->
    <!-- ===================================================================== -->
    <logger name="com.yz.meson.execute" level="INFO"/>
    <logger name="com.yz.meson.demo.service" level="INFO"/>
    <logger name="org.springframework" level="INFO"/>
    <logger name="org.apache" level="INFO"/>
    <logger name="java" level="INFO"/>
    <root level="INFO">
        <appender-ref ref="DEFAULT-APPENDER"/>
    </root>
</configuration>
